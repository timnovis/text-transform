{
  "name": "text-transform",
  "version": "0.1.2",
  "description": "A microlibrary to transform strings with CSS-like properties",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/tests/.*\\.(ts|tsx|js)$"
  },
  "keywords": [
    "text",
    "transform",
    "text transform"
  ],
  "author": "Tim Novis <tim.novis@me.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "jest": "^23.1.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.1"
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timnovis/text-transform.git"
  },
  "bugs": {
    "url": "https://github.com/timnovis/text-transform/issues"
  },
  "homepage": "https://github.com/timnovis/text-transform#readme"
}
